< h1 > <% =  current_user.name  %> Favorites list </ h1 >
<br>
<table class="container">
  <thead>
    <tr class="row">
      <th class="col-md-4">content</th>
      <th class="col-md-4">image</th>
      < th  class =" col-md-4 " > Submission content </ th >
    </tr>
  </thead>
  <tbody>
    <%  @favorites . each  do | favorite | %>
      <tr class="row">
        <td class="col-md-4"><%= favorite.picture.user.name %></td>
        <td class="col-md-4"><%= image_tag favorite.picture.image.url %></td>
        <td class="col-md-4"><%= favorite.picture.content %></td>
      </tr>
    <% end %>
  </tbody>
</table>
